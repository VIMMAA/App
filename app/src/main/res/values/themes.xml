<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="android:colorBackground">@color/dark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:background">@color/dark</item>
    </style>

    <style name="CustomButton" parent="Theme.AppCompat">
        <item name="colorPrimary">@null</item>
        <item name="colorAccent">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="CustomEditTextStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:cursorVisible">true</item>
    </style>

</resources>